    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Assets\moon_icon.ico" />
    <None Remove="Assets\Windows_Calculator_icon.ico" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\moon_icon.ico" />
    <Resource Include="Assets\Windows_Calculator_icon.ico" />
  </ItemGroup>

  <ItemGroup>
    <Page Update="Themes\DarkTheme.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
  </ItemGroup>

</Project>
