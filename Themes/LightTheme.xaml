<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Кольори для світлої теми -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="DisplayBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="#333333"/>
    <SolidColorBrush x:Key="DisplayForegroundBrush" Color="#333333"/>
    <SolidColorBrush x:Key="OperationButtonBrush" Color="#4CAF50"/>

    <!-- Стиль кнопок для світлої теми -->
    <Style x:Key="CalculatorButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ButtonBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ButtonForegroundBrush}"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="1.5"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#D0D0D0"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Стиль для операційних кнопок -->
    <Style x:Key="OperationButtonStyle" TargetType="Button" BasedOn="{StaticResource CalculatorButtonStyle}">
        <Setter Property="Background" Value="{StaticResource OperationButtonBrush}"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

</ResourceDictionary>